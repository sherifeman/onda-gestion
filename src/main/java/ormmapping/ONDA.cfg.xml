<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3307/ONDA</property>
		<property name="connection.username">root</property>
		<property name="connection.password">admin</property>
		<property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
		<property name="hibernate.c3p0.acquire_increment">1</property>
		<property name="hibernate.c3p0.idle_test_period">0</property>
		<property name="hibernate.c3p0.min_size">1</property>
		<property name="hibernate.c3p0.max_size">15</property>
		<property name="hibernate.c3p0.timeout">0</property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/onda/Devise.hbm.xml" />
		<mapping resource="ormmapping/onda/Direction.hbm.xml" />
		<mapping resource="ormmapping/onda/Facture.hbm.xml" />
		<mapping resource="ormmapping/onda/Fonction.hbm.xml" />
		<mapping resource="ormmapping/onda/Fournisseur.hbm.xml" />
		<mapping resource="ormmapping/onda/HistoriqueActions.hbm.xml" />
		<mapping resource="ormmapping/onda/Journal.hbm.xml" />
		<mapping resource="ormmapping/onda/Motif.hbm.xml" />
		<mapping resource="ormmapping/onda/OrdrePaiment.hbm.xml" />
		<mapping resource="ormmapping/onda/Profil.hbm.xml" />
		<mapping resource="ormmapping/onda/Rejet.hbm.xml" />
		<mapping resource="ormmapping/onda/Service.hbm.xml" />
		<mapping resource="ormmapping/onda/Statut.hbm.xml" />
		<mapping resource="ormmapping/onda/User.hbm.xml" />
	</session-factory>
</hibernate-configuration>
